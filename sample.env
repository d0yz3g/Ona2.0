# Основные настройки бота
BOT_TOKEN=your_telegram_bot_token_here
OPENAI_API_KEY=your_openai_api_key_here
ELEVEN_TOKEN=your_elevenlabs_api_token

# Настройки режима работы (polling или webhook)
# Установите WEBHOOK_MODE=true для работы через webhook
# или WEBHOOK_MODE=false для работы через long polling
WEBHOOK_MODE=true

# Настройки webhook (обязательно, если WEBHOOK_MODE=true)
# URL для webhook, например https://your-app.up.railway.app/webhook/{token}
WEBHOOK_URL=https://your-app-name.up.railway.app/webhook/BOT_TOKEN
# Либо укажите только домен Railway (URL будет сформирован автоматически)
RAILWAY_PUBLIC_DOMAIN=

# Настройки базы данных
# Если указано, будет использоваться PostgreSQL,
# если не указано - SQLite (локальная база данных)
DATABASE_URL=

# Порт для webhook сервера и health check
# По умолчанию 8080, но на Railway обычно устанавливается автоматически
PORT=8080

# Настройки для Railway
# Обычно устанавливаются автоматически в Railway
RAILWAY=true
RAILWAY_STATIC_URL=

# Настройки логирования
LOG_LEVEL=INFO

# Настройки администратора (для тестирования)
ADMIN_CHAT_ID=your_telegram_user_id

# Настройки для напоминаний
# Часы (0-23) для отправки ежедневных напоминаний
REMINDER_HOUR=20
# Минуты (0-59) для отправки ежедневных напоминаний
REMINDER_MINUTE=0

# Расширенные настройки
# Время ожидания перед перезапуском при ошибке (в секундах)
RESTART_TIMEOUT=5
# Максимальное количество попыток перезапуска
MAX_RESTART_ATTEMPTS=3
# Включение режима отладки (больше логов)
DEBUG=false

# Токен ElevenLabs API для генерации голосовых медитаций
ELEVEN_API_KEY=your_elevenlabs_api_key_here

# Альтернативное имя для токена ElevenLabs (используется в новой функции synthesize_speech)
ELEVENLABS_API_KEY=your_elevenlabs_api_key

# ID голоса ElevenLabs по умолчанию (можно изменить на любой другой голос)
ELEVEN_VOICE_ID=EXAVITQu4vr4xnSDxMaL

# ID голоса ElevenLabs для функции synthesize_speech
ELEVENLABS_VOICE_ID=EXAVITQu4vr4xnSDxMaL

# Настройка времени напоминаний по умолчанию (в формате ЧЧ:ММ)
DEFAULT_REMINDER_TIME=20:00 